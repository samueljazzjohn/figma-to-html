{
    "compilerOptions": {
      "target": "es6",
      "module": "ESNext",
      "moduleResolution": "node",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@figma"
      ]
    },
    "include": [
      "src/*.ts",
      "src/*.tsx",
      "src/*.js"
  , "src/main.ts"  ],
    "exclude": [
      "node_modules"
    ]
  }